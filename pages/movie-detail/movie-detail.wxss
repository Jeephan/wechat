.container{
  display: flex;
  flex-direction: column;
}
.head-img{
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20rpx);
}
.head-img-hover{
  width: 100%;
  height: 320rpx;
  position: absolute;
  display: flex;
  flex-direction: column;
}
.main-title{
  font-size: 38rpx;
  color:rgb(255, 255, 255);
  font-weight: bolder;
  letter-spacing: 2rpx;
  margin-top: 50rpx;
  margin-left: 30rpx;
}
.sub-title{
  font-size: 28rpx;
  color: rgb(255, 255, 255);
  margin-top: 40rpx;
  margin-left: 30rpx;
  letter-spacing: 3rpx;
}
.like{
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 40rpx;
}
.highlight-font{
  color: red;
  font-size: 24rpx;
  margin-right: 10rpx;
}
.plain-font{
  color: #666;
  font-size: 24rpx;
  margin-right: 50rpx;
}
.movie-img{
  height: 238rpx;
  width: 175rpx;
  position: absolute;  /*必须有这个，才有下面的位置调整*/
  top:160rpx;
  right: 30rpx;
}
.summary{
  display: flex;
  flex-direction: column;
}
.flex-row{
  margin-left: 10rpx;
  font-size: 26rpx;
  margin-right: 5rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.mark{
  color : #807d7d;
  font-size: 26rpx;
  margin-right: 20rpx
}
.original-title{
  font-size: 30rpx;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
  font-weight: bolder;
}
.score-container{
  display: flex;
  flex-direction: row;
  align-items: baseline;
}
.average{
  margin-left:20rpx;
}
.hr{
  margin-top: 45rpx;
  width: 100%;
  height: 1rpx;
  background-color: rgb(201, 193, 193);
}
.synopsis{
  margin-left:40rpx;
  margin-right: 40rpx;
  display:flex;
  flex-direction: column;
  margin-top: 50rpx;
}
.synopsis-font{
  margin-top: 40rpx;
  color:#999;
}
.casts{
  display: flex;
  flex-direction: column;
  margin-top:50rpx;
  margin-left:40rpx;
}
.cast-font{
  color: #999;
  margin-bottom: 40rpx;
}
.cast-img{
  width: 170rpx;
  height: 210rpx;
  margin-bottom: 10rpx;
}
.casts-container{
  display: flex;
  flex-direction: row;
  margin-bottom: 50rpx;
  margin-right: 40rpx;
  height: 300rpx;
}
.cast-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
}

