.head-image{
  width: 100%;
  height: 460rpx;
}
.author-date{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx 0 20rpx 10rpx;  /* 上右下左*/
}
.avatar{
  height: 50rpx;
  width: 50rpx;
}
.author{
  font-size: 28rpx;
  margin-left: 10rpx;
  color: #999999;
}
.const-text{
  font-size: 20rpx;
  margin-left: 10rpx;
  color: #999999;
}
.date{
  font-size: 20rpx;
  margin-left: 10rpx;
  color: #999999;
}
.title{
  font-size: 32rpx;
  font-weight: bolder;
  margin-left: 30rpx;
}
.tool{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.horizon{
  width: 660rpx;
  height: 1rpx;
  background-color: #dfdddd;
  position: absolute; /*脱离文档*/
  z-index: -99;
}
.cicle{
  display: flex;
  width: 660rpx;
  flex-direction: row;
  justify-content: flex-end;
}
.collection-img{
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
}
.share-img{
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
}
.detail{
  color: #666;
  font-size: 24rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}
.view-detail{
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
}
.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute; /*脱离文本位置，必须搭配left等表示坐标的元素，否则图片会被遮挡*/
  left:50%;
  margin-left: -51rpx;
  top: 185rpx;
  opacity: 0.8; /*设置透明度*/
}