 .container {
  width: 200rpx;  /*整个容器的宽度*/
  display: flex; /*开启flex布局*/
  flex-direction: column; /*垂直排列*/
}

.poster {
  width: 100%;
  height: 270rpx;
  margin-top: 22rpx;
}

.title { /* 字数超过宽度自动省略*/
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  font-size: 30rpx;
  margin-top: 6rpx;
}
.rate-container{
  display: flex;
  flex-direction: row;
  align-items: baseline;
}
.score{
  margin-left: 10rpx;
  font-size: 24rpx;
}