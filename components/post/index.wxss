.post{
  border-top: 1rpx solid #ededed;
  border-bottom: 1rpx solid #ededed;
}
.post-author-date{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx 20rpx 10rpx;
}
.post-author-avatar{
  height: 50rpx;
  width: 50rpx;
}
.post-date{
  font-size: 26rpx;
  margin-left: 20rpx;
}
.post-title{
  font-size: 32rpx;
  font-weight: bolder;
  margin-left: 20rpx;
}
.post-image{
  width: 100%;
  height: 460rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.post-content{
  color: #666;
  font-size: 22rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}
.post-view{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-view-image{
  /* width: 32rpx;
  height: 32rpx; */
  margin-left: 10rpx;
}
.post-view-text{
  font-size: 22rpx;
  margin-right: 30rpx;
}
.view-text{
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}